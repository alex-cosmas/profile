---
import BaseHead from "../components/layout/BaseHead.astro";
import ExpandedContact from "../components/layout/ExpandedContact.astro";
import Header from "../components/layout/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead />
  </head>
  <body class="mx-gutter overflow-x-hidden">
    <div class="noise"></div>

    <Header />
    <main
      class="flex gap-12 xl:gap-24 flex-wrap md:flex-nowrap justify-center md:justify-start mb-20"
    >
      <aside
        class="whitespace-nowrap relative hidden lg:block green-fade px-4 py-6 rounded-xl text-b-minato"
      >
        <img
          src="/dots.svg"
          alt=""
          class="absolute -z-10 left-0 top-0 -bottom-2 -translate-x-12"
        />

        <h1 class="text-4xl text-b-willow-dark mb-[0.5rem] leading-none">
          <!-- <span class="block font-medium mb-2">陶映渠</span> -->
          <span class="block">Alex Cosmas</span>
        </h1>

        <p></p>
        <p class="mb-[1.5rem]">Product Designer </p>

